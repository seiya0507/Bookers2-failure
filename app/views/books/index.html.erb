<h1>Books</h1>

<% @books.each do |book| %>

<div>
  <%= image_tag book.get_image %>
  <%= image_tag 'sample-author1.jpg' %>

  <p>Title</p>
  <span>
    <%= link_to book.title, "/books/#{book.id}" %>
  </span>

  <p>Opinion</p>
  <span><%= book.body %></span>

</div>
<% end %>



<h1>新規投稿</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>
